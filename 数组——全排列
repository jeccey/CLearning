#include <stdio.h> 
#define N 4

int s[] = {1, 2, 3, 4}; 
    
void swap(int a, int b) 
{
    int temp = s[a]; 
    s[a] = s[b]; 
    s[b] = temp; 
} 

//对k个数做全排列 
void perm(int k){
  int i;
	if(k==1){//base:只剩一个数，可以打印 
		for(i=0; i<N; i++)
			printf("%d\t",s[i]);
		printf("\n");
	} else{
		for(i = N-k; i<N; i++){
			swap(N-k,i);	//交换第N-k+1个数（即s[N-k]）到前面来，准备打印S[N-k] …… 
			perm( k-1 );	//对剩下的数做全排列 
			swap(N-k,i); 	//对数组s复位 
		}
	}
}
 

int main() 
{ 
    perm(N); 
    
    return 0; 
} 
